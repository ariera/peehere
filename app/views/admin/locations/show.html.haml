%p#notice= notice

%p
  %b Name:
  = @location.name
%p
  %b Description:
  = @location.description

- if @location.indoor?
  %p
    %b Address:
    = @location.address
- else
  %p
    %b Latitude:
    = @location.latitude
  %p
    %b Longitude:
    = @location.longitude
%p
  %b Indoor:
  = @location.indoor
%p
  %b Average:
  = @location.average
%p
  %b Cache:
  = @location.cache_id
%p
  %b People count:
  = @location.people_count

:css
  table tr th, table tr td {text-align:center}

%table
  %thead
    %tr
      %th id
      %th user_id
      %th kind
      %th value
  %tbody
    - @location.ratings.each do |rating|
      %tr
        %td= link_to rating.id, admin_rating_path(rating)
        %td= rating.user_id
        %td= rating.kind
        %td= rating.value

= link_to 'Edit', edit_admin_location_path(@location)
\|
= link_to 'Back', admin_locations_path
