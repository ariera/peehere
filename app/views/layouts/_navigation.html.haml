= link_to "Pee Here", root_path, :class => 'brand'
%ul.nav.pull-right
  - if current_user
    %li.dropdown
      %a.dropdow-toggle{"data-toggle" => 'dropdown', 'href' => '#'}
        = current_user.name
        %icon.icon-caret-down
      %ul.dropdown-menu
        %li= link_to('logout', destroy_user_session_path, :method => 'delete')
        - if current_user.is_admin?
          %li= link_to 'admin', '/rails_admin'
  - else
    %li=link_to 'login', new_user_session_path
