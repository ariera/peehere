- if @location.name
  %p
    %b Name:
    = @location.name

= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@location.latitude}%2C#{@location.longitude}"


- if @location.indoor?
  %p
    %b Address:
    = @location.address
- else
  %p
    %b Latitude:
    = @location.latitude
  %p
    %b Longitude:
    = @location.longitude


- if @location.description
  %p
    %b Description:
    = @location.description

%p
  %b Indoor:
  = @location.indoor
%p
  %b Average:
  = @location.average
%p
  %b People count:
  = @location.people_count
